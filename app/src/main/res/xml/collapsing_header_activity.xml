<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">
    <ConstraintSet
        android:id="@+id/start">
        <Constraint
            android:id="@id/header"
            android:alpha="1.0"
            android:visibility="visible"
            android:elevation="4dp"
            android:layout_height="180dp"
            android:layout_width="0dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"/>
        <Constraint
            android:id="@id/fragment"
            android:layout_height="0dp"
            android:layout_width="0dp"
            motion:layout_constraintBottom_toTopOf="@id/bottomBar"
            motion:layout_constraintTop_toBottomOf="@id/header"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"/>
        <Constraint
            android:id="@id/bottomBar"
            android:layout_height="@dimen/menuBarHeight"
            android:layout_width="0dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"/>
    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/end">
        <Constraint
            android:id="@id/header"
            android:layout_height="0dp"
            android:alpha="0.0"
            android:layout_width="0dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"/>
<!--            android:visibility="gone"-->
        <Constraint
            android:id="@id/fragment"
            android:layout_height="0dp"
            android:layout_width="0dp"
            motion:layout_constraintBottom_toTopOf="@id/bottomBar"
            motion:layout_constraintTop_toBottomOf="@id/header"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"/>
        <Constraint
            android:id="@id/bottomBar"
            android:layout_width="0dp"
            android:layout_height="@dimen/menuBarHeight"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"/>
    </ConstraintSet>
    <Transition
        motion:constraintSetStart="@id/start"
        motion:constraintSetEnd="@id/end"
        motion:motionInterpolator="easeInOut">
        <KeyFrameSet>
            <KeyAttribute
                motion:framePosition="0"
                motion:motionTarget="@id/header"
                android:alpha="1.0"/>
            <KeyAttribute
                motion:framePosition="100"
                motion:motionTarget="@id/header"
                android:alpha="0.0"/>
        </KeyFrameSet>
        <OnSwipe
            motion:dragDirection="dragUp"
            motion:touchAnchorId="@id/fragment"/>
    </Transition>
</MotionScene>